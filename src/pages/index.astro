---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/home/HeroSection';
import { LatestRelease } from '../components/home/LatestRelease';
import { TourDates } from '../components/home/TourDates';
import ManifestoSection from '../components/home/ManifestoSection';
import NewsletterSection from '../components/home/NewsletterSection';
---

<Layout title="Inicio">
  {/* Hero: Carga inmediata porque es lo primero que se ve */}
  <HeroSection client:load />

  {/* Último Lanzamiento: Carga cuando es visible para ahorrar recursos iniciales */}
  <LatestRelease client:visible />


  {/* Manifiesto / Bio */}
  <ManifestoSection client:visible />
  
  {/* Próximas Fechas */}
  <TourDates client:visible />

  {/* Contacto / Newsletter */}
  <NewsletterSection client:visible />
</Layout>