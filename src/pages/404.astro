---
import Layout from '../layouts/Layout.astro';
import { MdSkipPrevious, MdReportProblem } from "react-icons/md";
import { FaCompactDisc } from "react-icons/fa"; // Usamos un disco en vez del ecualizador
---

<Layout title="404 - Pista no encontrada">
  <section class="relative flex-grow flex flex-col items-center justify-center p-6 w-full overflow-hidden min-h-[70vh]">
    
    {/* --- FONDO CON EFECTO SPOTLIGHT (FOCO) --- */}
    <div class="absolute inset-0 z-0 pointer-events-none">
        {/* Degradado Radial: Luz en el centro, negro en los bordes */}
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#2a2a2a] via-[#0b0b0b] to-[#0b0b0b] opacity-60"></div>
        {/* Textura de ruido sutil */}
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')] opacity-10 mix-blend-overlay"></div>
    </div>

    <div class="relative z-10 flex flex-col items-center max-w-4xl w-full text-center">
        
        {/* --- NÚMERO 404 GIGANTE --- */}
        <div class="relative leading-none select-none">
            {/* Sombra/Efecto detrás */}
            <h1 class="text-[12rem] md:text-[16rem] font-display font-black text-[#1a1a1a] tracking-tighter absolute left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 blur-sm scale-105 z-0">
                404
            </h1>
            {/* Texto principal */}
            <h1 class="text-[10rem] md:text-[14rem] font-display font-black bg-clip-text text-transparent bg-gradient-to-b from-white/20 to-white/5 tracking-tighter relative z-10 drop-shadow-2xl">
                404
            </h1>
            
            {/* Icono decorativo flotando */}
            <div class="absolute -top-4 -right-4 md:right-10 md:-top-10 text-primary/80 animate-pulse z-20">
                 <FaCompactDisc className="text-6xl md:text-8xl opacity-80 rotate-12" />
            </div>
        </div>

        {/* --- TEXTOS --- */}
        <div class="relative z-20 -mt-4 md:-mt-10 flex flex-col items-center gap-6">
            
            {/* Línea decorativa roja */}
            <div class="h-1.5 w-24 bg-primary rounded-full shadow-[0_0_15px_rgba(138,30,30,0.5)]"></div>
            
            <h2 class="text-2xl md:text-4xl font-display font-bold text-accent-gold tracking-[0.2em] uppercase drop-shadow-md">
                Ha pasado el Banketa
            </h2>

            {/* Caja de cita (Estilo Glassmorphism) */}
            <div class="mt-6 p-8 rounded-xl border border-white/5 bg-white/5 backdrop-blur-sm max-w-lg shadow-2xl">
                <p class="text-lg md:text-xl text-gray-300 font-light italic leading-relaxed font-serif">
                    (Silencio incómodo...)
                </p>
                <span class="block mt-3 text-xs md:text-sm text-text-muted font-sans uppercase tracking-wider opacity-70">
                    — Error: El enlace está roto o la página ha sido eliminada.
                </span>
            </div>
        </div>

        {/* --- BOTONES --- */}
        <div class="flex flex-col sm:flex-row gap-5 w-full justify-center pt-12 relative z-20">
            <a href="/" class="group relative flex items-center justify-center px-8 py-4 bg-primary hover:bg-[#a32424] text-white font-display font-bold uppercase tracking-widest text-sm rounded shadow-[0_10px_20px_-10px_rgba(139,30,30,0.5)] transition-all duration-300 hover:-translate-y-1">
                <MdSkipPrevious className="text-2xl mr-2" />
                <span>Volver a inicio</span>
            </a>
            

        </div>

    </div>
  </section>
</Layout>