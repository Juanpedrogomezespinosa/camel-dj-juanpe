---
import Layout from '../layouts/Layout.astro';
import VideoGallery from '../components/videos/VideoGallery';
import { MdVideoLibrary } from "react-icons/md";
---

<Layout title="Videoclips">
  {/*
    Sección principal simple.
    Al quitar el fondo personalizado, usamos el fondo por defecto del Layout.
    Añadimos padding-top (pt-24 md:pt-32) para que no se monte sobre el Navbar fijo.
    Añadimos padding-bottom (pb-12) para dar aire antes del footer.
  */}
  <section class="w-full flex flex-col items-center pt-24 md:pt-32 pb-12 flex-grow">

        {/* Cabecera de Página */}
        {/* Usamos max-w-7xl para que se alinee con el resto de la web */}
        <div class="w-full max-w-7xl px-6 mb-8 border-b border-[#2A2A2A] pb-8 flex flex-col md:flex-row justify-between items-end gap-6">
            <div class="flex flex-col gap-2">
                <div class="flex items-center gap-2 mb-2">
                    <MdVideoLibrary className="text-accent-gold text-2xl" />
                    <span class="text-accent-gold text-xs font-bold uppercase tracking-widest">Galería Visual</span>
                </div>
                <h2 class="text-5xl md:text-7xl font-display font-black tracking-tighter text-white uppercase leading-none">
                    Videoclips
                </h2>
                <p class="text-text-muted text-lg tracking-wide font-light max-w-xl mt-2">
                    Narrativas visuales desde el underground. Donde la letra se encuentra con la lente.
                </p>
            </div>
        </div>

        {/* Componente Interactivo de la Galería */}
        <VideoGallery client:load />

  </section>
</Layout>