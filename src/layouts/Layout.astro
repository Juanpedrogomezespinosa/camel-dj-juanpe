---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Camel & DJ Juanpe" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Camel & DJ Juanpe</title>
    <ViewTransitions />
  </head>
  
  <body class="bg-background-dark text-text-main font-sans antialiased overflow-x-hidden selection:bg-primary selection:text-white flex flex-col min-h-screen">
    
    <Navbar client:load />
    
    <main class="flex-grow flex flex-col items-center w-full">
      <slot />
    </main>

    <footer class="w-full bg-[#050505] border-t border-card-dark py-12 mt-auto">
        <div class="max-w-[1280px] mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-8">
            <div class="flex items-center gap-2">
                <span class="text-white text-sm font-bold tracking-widest uppercase">Camel & DJ Juanpe</span>
            </div>
            <div class="text-[#444] text-xs uppercase tracking-wider font-mono">
                Â© {new Date().getFullYear()} Todos los derechos reservados.
            </div>
        </div>
    </footer>
  </body>
</html>