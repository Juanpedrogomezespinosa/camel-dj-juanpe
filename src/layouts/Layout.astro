---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar';
// 1. Importamos el componente Footer
import Footer from '../components/Footer.astro'; 
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
// Obtenemos la ruta actual para pasarla al Navbar
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Camel & DJ Juanpe" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Camel & DJ Juanpe</title>
    <ViewTransitions />
  </head>
  
  <body class="bg-background-dark text-text-main font-sans antialiased overflow-x-hidden selection:bg-primary selection:text-white flex flex-col min-h-screen">
    
    {/* Pasamos currentPath al Navbar. Ahora Navbar.tsx ya sabe recibirlo. */}
    <Navbar client:load currentPath={currentPath} />
    
    {/* Contenido principal que crece para empujar el footer abajo */}
    <main class="grow flex flex-col items-center w-full">
      <slot />
    </main>

    {/* 2. Usamos el componente Footer aqu√≠ (se queda pegado abajo gracias al flex-col min-h-screen del body) */}
    <Footer />
    
  </body>
</html>